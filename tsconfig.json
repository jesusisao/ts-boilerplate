{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "resolveJsonModule": true,
        "baseUrl": "./",
        "noImplicitAny": true,
        "removeComments": true,
        "preserveConstEnums": true,
        "outDir": "./dist/",
        "sourceMap": true
    },
    "include": [
        "src/**/*",
        "*.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}